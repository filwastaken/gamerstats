<p id="notice"><%= notice %></p>

<h1>Teams</h1>

<table>
  <thead>
    <tr>
      <th>Nome team</th>
      <th>Giocatore1</th>
      <th>Giocatore2</th>
      <th>Giocatore3</th>
      <th>Giocatore4</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.nome_team %></td>
        <td><%= team.giocatore1 %></td>
        <td><%= team.giocatore2 %></td>
        <td><%= team.giocatore3 %></td>
        <td><%= team.giocatore4 %></td>
        <td><%= link_to 'Show', team %></td>
        <td><%= link_to 'Edit', edit_team_path(team) %></td>
        <td><%= link_to 'Destroy', destroy_team_path(team), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

