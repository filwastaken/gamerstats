<% if current_user != nil %>
  <% if current_user.teamLeader? || current_user.teamLeaderAbbonato? %>
    <h1>Teams</h1>

    <table class="table table-dark table-striped-columns">
      <thead>
        <tr>
          <th scope="col">Nome team</th>
          <th scope="col">Team Leader</th>
          <th scope="col">Giocatore 2</th>
          <th scope="col">Giocatore 3</th>
          <th scope="col">Giocatore 4</th>
          <th colspan="3" scope="col">Azioni</th>
        </tr>
      </thead>

      <tbody class="table-group-divider">
        <% @teams.each do |team| %>
          <% if current_user.uid.to_s == team.giocatore1 %>
              <tr class="table-light">
              <td><%= team.nome_team %></td>
              <td><%= team.giocatore1 %></td>
              <td><%= team.giocatore2 %></td>
              <td><%= team.giocatore3 %></td>
              <td><%= team.giocatore4 %></td>
              <td><%= link_to 'Show', team, class:"link-success link-offset-2" %></td>
              <td><%= link_to 'Edit', edit_team_path(team), class:"link-warning link-offset-2" %></td>
              <td><%= link_to 'Destroy', destroy_team_path(team), method: :delete, data: { confirm: 'Are you sure?' }, class:"link-danger link-offset-2" %></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Team', new_team_path, class:"link-body-emphasis link-offset-2" %>

  <% else %>
    <div class="container" style="justify:center; text-align:center; font-size: 2.7vw; background-color:#ffffffb3; color:red">
      Per poter accedere a questa pagina devi essere un team leader
    </div>
  <% end %>
<% else %>
  <div class="container" style="justify:center; text-align:center; font-size: 2.7vw; background-color:#ffffffb3; color:red">
    Per poter accedere a questa pagina devi effettuare prima il login
  </div>
<% end %>