<% if current_user != nil %>
    <% if current_user.abbonato? || current_user.teamLeaderAbbonato? %>
        <div id="loadingScreen" style="position: fixed; top: 0; left: 0; width: 100%; height: 100%; z-index: 99; background-color: rgba(0, 0, 0, 0.5); backdrop-filter: blur(5px); align-items:center; justify-content:center;">
            <div id="contentLoadingScreen" style="background-color: #1b1b1b; width:350px; text-align:center; color:white; font-size:16px">
                <img id="imgLoading" src="assets/loadingPiccola.gif" alt="Stiamo contattanto i server di Battlenet per ottenere i dati" style="vertical-align: center">
            </div>  
        </div>
        <div class="container" style="background-color: #ffffffc8; padding-top:12px; padding-bottom:12px; width:30vw;">    
            <h1 style="text-align:center;">Editing Preferito</h1>
            <div class="container" style="display: flex; justify-content: center;">
                <%= render 'form', preferito: @preferito %>
            </div>
            <br>
            <div class="container" style="display: flex; justify-content: center;">
                <%= link_to 'Show', @preferito, class:"link-body-emphasis link-offset-2" %>  &nbsp &nbsp | &nbsp &nbsp
                <%= link_to 'Back', preferitos_path, class:"link-body-emphasis link-offset-2" %>
            </div>    
        </div>
    <% else %>
        <div class="container" style="justify:center; text-align:center; font-size: 2.7vw; background-color:#ffffffb3; color:red">
            Per poter accedere a questa pagina devi essere abbonato
        </div>
    <% end %>
<% else %>
    <div class="container" style="justify:center; text-align:center; font-size: 2.7vw; background-color:#ffffffb3; color:red">
        Per poter accedere a questa pagina devi effettuare prima il login
    </div>
<% end %>